<?xml version="1.0" encoding="utf-8"?>
<!-- 
    注册页面布局文件
    作用：提供用户创建新账号的界面
    
    整体结构：
    1. LinearLayout垂直布局作为根容器
    2. 顶部返回按钮和标题
    3. 手机号输入区域
    4. 验证码输入区域（含发送验证码按钮）
    5. 密码输入区域
    6. 确认密码输入区域
    7. 底部注册按钮
    
    交互流程：
    1. 用户输入手机号
    2. 获取并填写验证码
    3. 设置密码并确认
    4. 点击注册完成账号创建
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 
        返回按钮
        作用：返回到登录页面
        特点：
        1. 位于页面左上角
        2. 临时使用应用图标作为返回图标
        3. 添加了内容描述以提高无障碍可访问性
    -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="返回" />

    <!-- 
        页面标题
        作用：明确告知用户当前页面功能
        特点：
        1. 居中显示，使用粗体大号字体提升层级
        2. 上下留有足够边距，视觉效果更佳
    -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="用户注册"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- 
        手机号输入区域
        作用：用户输入手机号作为账号
        特点：
        1. 垂直布局包含标签和输入框
        2. 限制只能输入11位数字（符合中国手机号规则）
        3. 使用电话输入类型优化数字键盘体验
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11" />
    </LinearLayout>

    <!-- 
        验证码输入区域
        作用：验证手机号真实性并增强安全性
        特点：
        1. 垂直布局包含标签和输入区域
        2. 输入框和发送按钮水平排列
        3. 权重比例为2:1，合理分配空间
        4. 使用数字输入类型并限制最大长度为6位
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etVerificationCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6" />

            <!-- 
                发送验证码按钮
                作用：向用户手机发送验证码短信
                功能：点击后触发SmsUtil发送验证码，并开始倒计时
            -->
            <Button
                android:id="@+id/btnSendCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="获取验证码" />
        </LinearLayout>
    </LinearLayout>

    <!-- 
        密码输入区域
        作用：用户设置账号密码
        特点：
        1. 垂直布局包含标签和输入框
        2. 使用密码输入类型自动隐藏输入内容
        3. 注册时可能会有密码强度检查
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="请输入密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <!-- 
        确认密码区域
        作用：确保用户正确输入密码，防止输入错误
        特点：
        1. 垂直布局包含标签和输入框
        2. 使用密码输入类型自动隐藏输入内容
        3. 提交时会与密码进行比对，确保一致
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="请再次输入密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <!-- 
        注册按钮
        作用：提交表单，创建新账号
        特点：
        1. 全宽按钮，视觉效果明显
        2. 上方留有足够间距，避免误触
        3. 点击后会验证所有输入并调用UserController处理注册
        4. 注册成功后会返回登录页面或直接登录
    -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="注册" />

</LinearLayout> 